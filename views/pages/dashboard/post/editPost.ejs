<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Post</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        margin: 20px;
        background: #f4f4f4;
      }
      .form-container {
        max-width: 800px;
        margin: auto;
        padding: 20px;
        background: white;
        border-radius: 5px;
        box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
      }
      h2 {
        text-align: center;
      }
      label {
        font-weight: bold;
        display: block;
        margin-top: 10px;
      }
      input,
      textarea,
      select {
        width: 100%;
        padding: 10px;
        margin-top: 5px;
        border-radius: 5px;
        border: 1px solid #ddd;
        font-size: 14px;
      }
      textarea {
        height: 120px;
        resize: vertical;
      }
      button {
        width: 100%;
        padding: 10px;
        background: #007bff;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 15px;
      }
      button:hover {
        background: #0056b3;
      }
      .thumbnail-preview img {
        width: 100px;
        height: auto;
        margin-top: 10px;
        border-radius: 5px;
      }
      #readTime {
        pointer-events: none;
        background-color: #e9ecef;
        cursor: not-allowed;
      }
      #update {
        width: fit-content;
      }
      #delete {
        width: fit-content;
        padding: 8px;
        background: red;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        margin-top: 15px;
        text-decoration: none;
        display: inline-block;
      }
      #delete:hover {
        background: rgb(152, 2, 2);
      }
    </style>
  </head>
  <body>
    <div class="form-container">
      <h2>Edit Post</h2>
      <form
        action="/post/edit/<%= post._id %>"
        method="POST"
        enctype="multipart/form-data"
      >
        <label for="title">Title</label>
        <input
          type="text"
          id="title"
          name="title"
          value="<%= post.title %>"
          required
        />

        <label for="body">Body</label>
        <textarea id="body" name="body" required><%= post.body %></textarea>

        <label for="tags">Tags (comma separated)</label>
        <input
          type="text"
          id="tags"
          name="tags"
          value="<%= post.tags.join(', ') %>"
        />

        <label for="thumbnail">Thumbnail</label>
        <input type="file" id="thumbnail" name="thumbnail" />
        <div class="thumbnail-preview">
          <% if (post.thumbnail) { %>
          <img src="<%= post.thumbnail %>" alt="Post Thumbnail" />
          <% } %>
        </div>

        <label for="readTime">Estimated Read Time (in minutes)</label>
        <input
          type="number"
          id="readTime"
          name="readTime"
          value="<%= post.readTime ? parseInt(post.readTime) : '' %>"
          readonly
        />

        <p><strong>Likes:</strong> <%= post.likes.length %></p>
        <p><strong>Dislikes:</strong> <%= post.dislikes.length %></p>
        <p><strong>Comments:</strong> <%= post.comments.length %></p>

        <button type="submit" id="update">Update Post</button>
        <a id="delete" href="/post/delete/<%= post._id%>">Delete post</a>
      </form>
    </div>
    <script
      src="https://cdn.tiny.cloud/1/cmovxn8o51zvvs59sr9ipq8kbxz7hiz79q8x5nlqnfwfukdx/tinymce/7/tinymce.min.js"
      referrerpolicy="origin"
    ></script>
    <script src="/scripts/tinymce.js"></script>
  </body>
</html>
